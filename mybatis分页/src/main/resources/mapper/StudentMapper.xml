<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.garfield.pape.dao.StudentMapper">
    <resultMap type="com.garfield.pape.bean.StudentBean"
               id="BaseResultMapper">
        <id property="id" column="ID"/>
        <result property="name" column="name"/>
        <result property="sex" column="sex"/>
    </resultMap>

    <insert id="insertStudent">
        insert into student(name,sex) values(#{studentBean.name},#{studentBean.sex})
    </insert>

    <select id="selectById" resultMap="BaseResultMapper">
        select * from student where id = #{id}
    </select>

    <select id="selectAll" resultMap="BaseResultMapper">
        select * from student
    </select>

    <update id="updateStudentById">
        update student set name  = #{req.name} where id = #{req.id}
    </update>

</mapper>
